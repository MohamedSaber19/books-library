<html>

<head>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <title><%= appName%></title>
    <link href="css/styles.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>

<body>
    <header class="navbar navbar-bright navbar-fixed-top" role="banner">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="/">Home</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <%for(let i=0;i<nav.length;i++){%>
                        <li class="nav-item">
                            <a class="nav-link" href=<%= nav[i].link%>><%= nav[i].title%> </a>
                        </li>
                        <%}%>
                        </ul>
                    </div>
                </nav>
                
            </div>
        </header>

        <div id="masthead">  
            <div class="container">
                <div class="row">
                <div class="col-md-7">
                    <h1><%= appName%>
                        <p class="lead"></p>
                        </h1>
                </div>
                <div class="col-md-5">
                    <div class="well well-lg">
                        <div class="row">
                            <div class="col-sm-12">


                            </div>
                        </div>
                    </div>
                </div>
        </div>
        </div><!-- /cont -->

        </div>


        <div class="container">
            <div class="row">

                <div class="col-md-12">

                    <div class="panel">
                        <div class="panel-body">

                            <!--/stories-->
                            <%for(let i=0;i<books.length;i++){%>
                            <div class="row">
                                <br>
                                <div class="col-md-2 col-sm-3 text-center">
                                    <a class="story-title" href="#"><img alt=""
                                            src="https://freeiconshop.com/wp-content/uploads/edd/book-flat.png"
                                            style="width:100px;height:100px" class="img-circle"></a>
                                </div>
                                <div class="col-md-10 col-sm-9">
                                    <h3><%=books[i].title%></h3>
                                    <div class="row" style="margin:0">
                                        <div class="col-xs-9">
                                            <h6><span class="label label-default"><%=books[i].author%></span></h6>
                                            <p>
                                                <small style="font-family:courier,'new courier';"
                                                    class="d-block text-muted"><%=books[i].genre%>
                                                </small>
                                                <a href="/books/<%=books[i]._id%>" class="text-muted">Read More</a>
                                            </p>
                                        </div>
                                        <div class="col-xs-3"></div>
                                    </div>
                                    <br><br>
                                </div>
                            </div>
                            <hr>
                            <%}%>
                    <!--/stories-->
                    
                    </div>
                </div>
                                                  
                </div><!--/col-12-->
            </div>
        </div>

        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
    </body>

</html>